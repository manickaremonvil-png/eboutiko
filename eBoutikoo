import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

// ======== MY APP ========
class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      title: 'EBoutikoo',
      theme: ThemeData(primarySwatch: Colors.blue),
      home: HomePage(),
    );
  }
}

// ======== CUSTOM APPBAR ========
class MyAppBar extends StatelessWidget implements PreferredSizeWidget {
  final String title;
  final bool isLoggedIn;

  MyAppBar({required this.title, required this.isLoggedIn});

  @override
  Widget build(BuildContext context) {
    return AppBar(
      title: Text(title),
      actions: [
        TextButton(
          onPressed: () {
            if (isLoggedIn) {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(content: Text("Peman fÃ¨t avÃ¨k siksÃ¨!")),
              );
            } else {
              ScaffoldMessenger.of(context).showSnackBar(
                SnackBar(content: Text("Ou dwe konekte avan ou peye")),
              );
            }
          },
          child: Text("PEYE", style: TextStyle(color: Colors.white)),
        )
      ],
    );
  }

  @override
  Size get preferredSize => Size.fromHeight(kToolbarHeight);
}

// ======== HOME PAGE ========
class HomePage extends StatefulWidget {
  @override
  _HomePageState createState() => _HomePageState();
}

class _HomePageState extends State<HomePage> {
  bool isLoggedIn = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: MyAppBar(title: "EBoutikoo", isLoggedIn: isLoggedIn),

      drawer: Drawer(
        child: ListView(
          children: [
            DrawerHeader(
              decoration: BoxDecoration(color: Colors.blue),
              child: Center(
                child: Text(
                  "EBoutikoo",
                  style: TextStyle(color: Colors.white, fontSize: 22),
                ),
              ),
            ),
            ListTile(
              title: Text("Konekte"),
              onTap: () {
                setState(() {
                  isLoggedIn = true;
                });
                Navigator.pop(context);
              },
            ),
            ListTile(
              title: Text("Lis pwodwi"),
              onTap: () {
                Navigator.push(
                  context,
                  MaterialPageRoute(
                      builder: (_) =>
                          ProductListPage(isLoggedIn: isLoggedIn)),
                );
              },
            ),
            ListTile(
              title: Text("Dekonekte"),
              onTap: () {
                setState(() {
                  isLoggedIn = false;
                });
                Navigator.pop(context);
              },
            ),
          ],
        ),
      ),

      body: SingleChildScrollView(
        child: Padding(
          padding: const EdgeInsets.all(10),
          child: Column(
            children: [
              Text(
                isLoggedIn ? "Byenveni ðŸ‘‹ðŸ½" : "Ou poko konekte",
                style: TextStyle(fontSize: 18),
              ),
              SizedBox(height: 15),

              // Kategori
              CategoryBox(name: "Pwodwi"),

              SizedBox(height: 15),

              // Pwodwi: Selman savon
              Row(
                children: [
                  Expanded(
                      child: ProductCard(
                          product: Product("Savon", "Sa se savon"),
                          isLoggedIn: isLoggedIn)),
                  SizedBox(width: 10),
                  Expanded(
                      child: ProductCard(
                          product: Product("Savon", "Sa se savon"),
                          isLoggedIn: isLoggedIn)),
                ],
              )
            ],
          ),
        ),
      ),
    );
  }
}

// ======== CATEGORY BOX ========
class CategoryBox extends StatelessWidget {
  final String name;
  CategoryBox({required this.name});

  @override
  Widget build(BuildContext context) {
    return Container(
      height: 80,
      color: Colors.blue[900],
      alignment: Alignment.center,
      child: Text(
        name,
        style: TextStyle(color: Colors.white, fontSize: 18),
      ),
    );
  }
}

// ======== PRODUCT MODEL ========
class Product {
  final String name;
  final String description;
  Product(this.name, this.description);
}

// ======== PRODUCT CARD ========
class ProductCard extends StatelessWidget {
  final Product product;
  final bool isLoggedIn;

  ProductCard({required this.product, required this.isLoggedIn});

  @override
  Widget build(BuildContext context) {
    return Card(
      child: Column(
        children: [
          Container(
            height: 80,
            color: Colors.blue[900],
          ),
          Padding(
            padding: const EdgeInsets.all(8.0),
            child: Text(product.name),
          ),
          ElevatedButton(
            onPressed: () {
              Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (_) =>
                      DetailPage(product: product, isLoggedIn: isLoggedIn),
                ),
              );
            },
            child: Text("Voir"),
          )
        ],
      ),
    );
  }
}

// ======== DETAIL PAGE ========
class DetailPage extends StatelessWidget {
  final Product product;
  final bool isLoggedIn;
  DetailPage({required this.product, required this.isLoggedIn});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: MyAppBar(title: "DETAY", isLoggedIn: isLoggedIn),
      body: Padding(
        padding: const EdgeInsets.all(10),
        child: Column(
          children: [
            Container(
              height: 150,
              color: Colors.blue[900],
            ),
            SizedBox(height: 10),
            Text(product.description),
          ],
        ),
      ),
    );
  }
}

// ======== PRODUCT LIST PAGE ========
class ProductListPage extends StatelessWidget {
  final bool isLoggedIn;
  ProductListPage({required this.isLoggedIn});

  final List<Product> products = [
    Product("Savon", "Sa se savon"),
    Product("Savon", "Sa se savon"),
    Product("Savon", "Sa se savon"),
    Product("Savon", "Sa se savon"),
    Product("Savon", "Sa se savon"),
    Product("Savon", "Sa se savon"),
  ];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: MyAppBar(title: "Lis Pwodwi", isLoggedIn: isLoggedIn),
      body: GridView.builder(
        padding: EdgeInsets.all(10),
        gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
          crossAxisCount: 2,
          crossAxisSpacing: 10,
          mainAxisSpacing: 10,
        ),
        itemCount: products.length,
        itemBuilder: (context, index) {
          final product = products[index];
          return Card(
            child: Column(
              children: [
                Container(
                  height: 80,
                  color: Colors.blue[900],
                ),
                SizedBox(height: 5),
                Text(product.name),
                Icon(Icons.shopping_cart),
              ],
            ),
          );
        },
      ),
    );
  }
}

